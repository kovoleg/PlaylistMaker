<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorWhiteToBlack"
        android:orientation="vertical"
        android:layout_marginTop='20dp'
        android:padding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/backFromSettingsButton"
                android:contentDescription="@string/back_button_description"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.13"
                android:backgroundTint="?attr/colorWhiteToBlack"
                app:icon="@drawable/arrow_back"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/icon_padding"
                app:iconTint="?attr/colorBlackToWhite"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/ys_display_medium"
                android:layout_weight="0.87"
                android:text="@string/options"
                android:textColor="?attr/colorBlackToWhite"
                android:gravity="center_vertical|start"
                android:textSize="@dimen/primary_text_size"
                android:paddingStart="12dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>

        <androidx.appcompat.widget.SwitchCompat
            android:text="@string/dark_theme"
            style="@style/OptionsScreenButton"
            android:paddingStart="@dimen/basic_padding"
            app:trackTint="?attr/colorLightGrayToLightBlue"
            app:thumbTint="?attr/colorGrayToBlue"
            app:trackTintMode="multiply"/>

        <Button
            android:id="@+id/shareAppButton"
            android:text="@string/share_app"
            app:icon="@drawable/share"
            style="@style/OptionsScreenButton"
            />

        <Button
            android:id="@+id/writeToSupportButton"
            android:text="@string/write_to_support"
            app:icon="@drawable/support"
            style="@style/OptionsScreenButton"
            />

        <Button
            android:id="@+id/usersAgreementButton"
            android:text="@string/user_agreement"
            app:icon="@drawable/forward_arrow"
            style="@style/OptionsScreenButton"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5.5"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>