<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBlueToBlack"
    android:orientation="vertical"
    android:padding="@dimen/basic_padding"
    android:weightSum="3.25">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:layout_gravity="start"
        android:text="@string/playlist_maker"
        android:textColor="@color/white"
        android:textSize="@dimen/primary_text_size"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/searchButton"
        style="@style/MainScreenButton"
        android:text='@string/search'
        app:icon="@drawable/lupa" />

    <Button
        android:id="@+id/mediatecaButton"
        android:text='@string/mediateca'
        app:icon="@drawable/playlist"
        style="@style/MainScreenButton"
        />

    <Button
        android:id="@+id/optionsButton"
        android:text='@string/options'
        app:icon="@drawable/options"
        style="@style/MainScreenButton"
        />
</LinearLayout>