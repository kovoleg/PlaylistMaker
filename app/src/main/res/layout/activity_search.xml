<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorWhiteToBlack"
        android:orientation="vertical"
        android:layout_marginTop='20dp'
        android:padding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/backFromSettingsButton"
                android:contentDescription="@string/back_button_description"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.13"
                android:backgroundTint="?attr/colorWhiteToBlack"
                app:icon="@drawable/arrow_back"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/icon_padding"
                app:iconTint="?attr/colorBlackToWhite"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/ys_display_medium"
                android:layout_weight="0.87"
                android:text="@string/search"
                android:textColor="?attr/colorBlackToWhite"
                android:gravity="center_vertical|start"
                android:textSize="@dimen/primary_text_size"
                android:paddingStart="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <EditText
            android:id="@+id/search_bar"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/background_search_edittext"
            android:drawableStart="@drawable/lupa"
            android:drawablePadding="8dp"
            android:drawableTint="?attr/colorGrayToBlack"
            android:gravity="center_vertical|start"
            android:hint="@string/search"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:lines="1"
            android:paddingStart="12dp"
            android:textColorHint="?attr/colorGrayToBlack"
            tools:ignore="RtlSymmetry" />

            <ImageView
                android:id="@+id/clearIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="8dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/clear_button"
                android:src="@drawable/cross"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
